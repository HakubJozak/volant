<div class='col-md-6'>
  <h3>
    Tags
    {{#link-to 'tags.new' class='btn btn-success pull-right'}}{{fa 'plus'}} New{{/link-to}}
  </h3>

<table class="table table-striped table-hover">
  <thead>
        <th>Name</th>
        <th>Color</th>
        <th>Text color</th>
      </thead>
  <tbody>
    {{#each}}
      <tr>
                        <td>
          {{#link-to 'tag' this}}
            {{name}}
          {{/link-to}}
        </td>
        <td>{{color}}</td>
        <td>{{text_color}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
<div class='col-md-6 right-side-edit'>
  {{outlet}}
</div>