<div class='row'>
  <div class='col-md-6'>
    <h3>Users</h3>
    <table class="table table-striped table-hover">
      <thead>
        <th>Name</th>
        <th>Email</th>
        <th class='text-right'>{{#link-to 'users.new' class='btn btn-success'}}{{fa 'plus'}}{{/link-to}}</th>
      </thead>
      <tbody>
        {{#each}}
          <tr>
            <td>
              {{#link-to 'user' this}}
              {{#if name}}
                {{name}}
              {{else}}
                [No-Name]
              {{/if}}
              {{/link-to}}
            </td>
            <td>
              {{email}}
            </td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class='col-md-6'>
    {{outlet}}
  </div>
</div>