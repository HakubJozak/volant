<div class='row'>
  <div class='col-lg-6'>
    <h3>Users</h3>
    <table class="table table-striped table-hover">
      <thead>
        <th>Email</th>
        <th class='text-right'>{{#link-to 'users.new'}}{{fa 'plus'}}{{/link-to}}</th>
      </thead>
      <tbody>
        {{#each}}
          <tr {{action 'go_to_detail' this}}>
            <td>
              {{email}}
            </td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class='col-lg-6'>
    {{outlet}}
  </div>
</div>