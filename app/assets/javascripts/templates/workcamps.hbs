<div class="row">
 {{ partial 'workcamps/filter' }}
</div>

  <div class="row">
    <div class="col-lg-2">
      <ul class='pager'>
      <li {{bind-attr class=":previous
        previous_page_exists::disabled"}}>
        <a href="#" {{action "adjust_page" -1}}>&larr;</a>
      </li>
      </ul>
    </div>
    <div class="col-lg-8">
      <p>
        <em>Found {{pagination.total}} workcamps in
        {{pagination.total_pages}} pages. Displaying page
        {{pagination.current_page}}.</em>
        </p>
    </div>
    <div class="col-lg-2">
      <ul class='pager'>
      <li {{bind-attr class=":next next_page_exists::disabled"}}>
        <a href="#" {{action "adjust_page" 1}}>&rarr;</a>
      </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
       <div class="table-responsive">
         <table class="table table-striped table-hover">
           <thead>
             <tr>
               <th></th>
               <th>Code</th>
               <th>Name</th>
               <th>Intentions</th>
               <th>Tags</th>
               <th>Age</th>
               <th>From</th>
               <th>To</th>
               <th>Organization</th>
             </tr>
           </thead>
           <tbody>
             {{#each}}
               <tr {{action 'go_to_detail' this}}>
                 <td>{{flag country}}</td>
                 <td>{{code}}</td>
                 <td>{{name}}</td>
                 <td>
                   {{#each workcamp_intentions}}
                     {{ code }},
                   {{/each}}
                 </td>
                 <td>
                   {{#each tags}}
                     {{ tag this }}
                   {{/each}}
                 </td>
                 <td>{{age-range this }}</td>
                 <td>{{format-date begin}}</td>
                 <td>{{format-date end}}</td>
                 <td>{{organization.name}}</td>
               </tr>
             {{/each}}
           </tbody>
         </table>
       </div>
    </div>
  </div>
