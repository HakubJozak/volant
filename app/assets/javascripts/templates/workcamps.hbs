<h1>Volant</h1>

<form {{ action 'search_workcamp' }} class="pure-form" >
  <fieldset>
    <legend>Search workcamps</legend>
    {{ input value=query }}
      <button type="submit" class="pure-button pure-button-primary">Search</button>
  </fieldset>
</form>

Found {{pagination.total}} workcamps in {{pagination.total_pages}} pages. Displaying page {{pagination.current_page}}.

{{!-- TODO: transform into helpers  --}}
<form class="pure-form">
  <a {{bind-attr class=":pure-button previous_page_exists::pure-button-disabled"}} href="#" {{action "adjust_page" -1}}>&lt;</a>
  {{input value=current_page }}
  <a {{bind-attr class=":pure-button next_page_exists::pure-button-disabled"}} href="#" {{action "adjust_page" 1}}>&gt;</a>
</form>

<table class="pure-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Country</th>
      <th>Organization</th>
    </tr>
  </thead>
  <tbody>
    {{#each}}
      <tr>
        <td>{{name}}</td>
        <td>{{code}}</td>
        <td>{{country.name}}</td>
        <td>{{organization.name}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}
