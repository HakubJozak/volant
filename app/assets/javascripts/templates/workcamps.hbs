<form {{ action 'search_workcamp' on=submit }} class="pure-form" >
  <fieldset>
    {{ input value=query class="pure-input-2-3" }}
     <button type="submit" class="pure-button pure-button-primary">Search</button>
  </fieldset>
</form>

<em>Found {{pagination.total}} workcamps in {{pagination.total_pages}} pages. Displaying page {{pagination.current_page}}.</em>

<hr>


{{!-- TODO: transform into helpers  --}}
<ul class="pager">
  <li {{bind-attr class="::previous previous_page_exists::disabled"}}><a href="#" {{action "adjust_page" -1}}>&larr;</a></li>
  <li>
  <form class="form-inline" >
    <div class="form-group">
      {{input value=current_page }}
    </div>
  </form>
  </li>
  <li {{bind-attr class="::next next_page_exists::disabled"}}><a  href="#" {{action "adjust_page" 1}}>&rarr;</a></li>

</ul>



<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Code</th>
        <th>From</th>
        <th>To</th>
        <th>Country</th>
        <th>Organization</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
        <tr>
          <td>{{flag country}}</td>
          <td>{{country.name}}</td>
          <td>{{name}}</td>
          <td>{{code}}</td>
          <td>{{format-date begin}}</td>
          <td>{{format-date end}}</td>
          <td>{{organization.name}}</td>
          <td class="actions">
            {{#link-to 'workcamp' this class="pure-button"}}
            Detail
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>