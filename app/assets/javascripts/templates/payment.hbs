<div class='row'>
  <div class="form-group col-lg-3">
    <label class=" control-label">Amount</label>
    {{input value=amount class="form-control" type='number'}}
  </div>

  <div class="form-group col-lg-3">
    <label class=" control-label">Received</label>
    {{view Volant.DateView dateBinding='received' }}
  </div>

  <div class="form-group col-lg-2">
    <label class=" control-label">Mean</label>
     {{view Ember.Select
            value=mean
            content=means
            optionValuePath="content.id"
            optionLabelPath="content.label"
            class="form-control" }}
  </div>
</div>

{{#if return_visible }}
  <div class='row'>
    <div class="form-group col-lg-3">
      <label class=" control-label">Returned amount</label>
      {{input value=returned_amount class="form-control" type='number'}}
    </div>

    <div class="form-group col-lg-3">
      <label class=" control-label">Returned date</label>
      {{view Volant.DateView dateBinding='returned_date' }}
    </div>

    <div class="form-group col-lg-6">
      <label class=" control-label">Return reason</label>
      {{input value=return_reason class="form-control" }}
    </div>
  </div>
{{/if}}

{{#if by_bank}}
<div class='row'>
  <div class="form-group col-lg-3">
    <label class=" control-label">Account</label>
    {{input value=account class="form-control" }}
  </div>

  <div class="form-group col-lg-3">
    <label class=" control-label">Bank code</label>
    {{input value=bank_code class="form-control" }}
  </div>

  <div class="form-group col-lg-2">
    <label class=" control-label">Variable sym.</label>
    {{input value=var_symbol class="form-control" }}
  </div>

  <div class="form-group col-lg-2">
    <label class=" control-label">Specific sym.</label>
    {{input value=spec_symbol class="form-control" }}
  </div>

  <div class="form-group col-lg-2">
    <label class=" control-label">Constant sym.</label>
    {{input value=const_symbol class="form-control" }}
  </div>
</div>
{{/if}}

<div class='row'>
  <div class="form-group col-lg-6">
    <p>
    {{#if isDirty }}
      <button type="submit" class="btn btn-success">Save the payment</button>
      {{ button 'Cancel' 'rollback' 'btn' }}
    {{/if}}

    {{#unless return_visible }}
    <a title='Show return fields' class='btn'
      {{ action 'force_show_return' }} >
      {{ fa 'undo' }} Show return fields
    </a>
    {{/unless}}
  </p>
  </div>
</div>
