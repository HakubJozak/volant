<h3>User {{email}}</h3>

<form class="form" role="form" {{action 'save' on="submit"}}>
  <div class="form-group">
    <label class=" control-label">Email</label>
    {{input value=email type='email' class="form-control"}}
  </div>

  <div class="form-group">
    <label class=" control-label">Password</label>
    {{input value=password type='email' class="form-control" type='password'}}
  </div>

  <button type="submit" class="btn btn-primary">Save</button>

  {{ button 'Cancel' 'rollback' 'btn' }}

  {{#unless isNew}}
    {{ button 'Delete' 'remove' 'btn btn-danger' }}
  {{/unless}}
</form>
