<div class='col-md-6'>
<h3>Countries</h3>

<table class="table table-striped table-hover">
  <thead>
        <th>Name en</th>
        <th>Name cs</th>
        <th>Code</th>
        <th>Triple code</th>
        <th class='text-right'>
      {{#link-to 'countries.new' class='btn btn-success'}}{{fa 'plus'}} New{{/link-to}}
    </th>
  </thead>
  <tbody>
    {{#each}}
      <tr>
                        <td>
          {{#link-to 'country' this}}
            {{name_en}}
          {{/link-to}}
        </td>
                                <td>{{name_cs}}</td>
                                <td>{{code}}</td>
                                <td>{{triple_code}}</td>
                        <td></td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
<div class='col-md-6 right-side-edit'>
  {{outlet}}
</div>