<h3>Countries</h3>

<table class="table table-striped table-hover">
  <thead>
        <th>name</th>
        <th>code</th>
    
    <th>
      <button type="button" class="btn btn-success" {{ action 'add'}}>
        <i class="fa fa-plus"></i>
      </button>
    </th>
  </thead>
  <tbody>
    {{#each itemController="country" }}
            <td>{{name}}</td>
            <td>{{code}}</td>
            <td></td>
    {{/each}}
  </tbody>
</table>
