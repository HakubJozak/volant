<div class='col-md-6'>
<h3>Countries</h3>

<table class="table table-striped table-hover">
  <thead>
        <th>Name</th>
        <th>Code</th>
        <th>Triple code</th>
    
    <th class='text-right'>
      <button type="button" class="btn btn-success" {{ action 'add'}}>
        <i class="fa fa-plus"></i>
      </button>
    </th>
  </thead>
  <tbody>
    {{#each}}
      <tr>
                        <td>
          {{#link-to 'country' this}}
            {{name}}
          {{/link-to}}
        </td>
                                <td>{{code}}</td>
                                <td>{{triple_code}}</td>
                        <td></td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
<div class='col-md-6'>
  {{outlet}}
</div>