{{ partial 'pagination' }}

<div class='row'>
<table class="table table-striped table-hover">
  <thead>
    <th></th>
    <th>Submitted</th>
    <th>Name</th>
    <th>Age</th>
    <th>Email</th>
    <th>Birth number</th>
    <th>Nationality</th>
    <th>Payment</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    {{#each itemController='apply_form'}}
      <tr {{action 'go_to_detail' this }}>
        <td>
          <i {{ bind-attr class=":fa starred:fa-star:fa-star-o" }} {{ action 'toggle_starred' bubbles=false}}></i>
        </td>
        <td>{{long-date created_at}}</td>
        <td>
          {{gender volunteer}}
          {{volunteer.firstname}}
          {{volunteer.lastname}}
        </td>
        <td>
          {{apply-form-state-icon state}}
          {{current_workcamp.name}}
        </td>
        <td>{{volunteer.age}}</td>
        <td>{{ mail-to volunteer.email }}</td>
        <td>{{volunteer.birthnumber}}</td>
        <td>{{volunteer.nationality}}</td>
        <td>{{payment.amount}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>