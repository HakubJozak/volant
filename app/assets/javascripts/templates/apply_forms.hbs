{{ partial 'pagination' }}

<div class='row'>
<table class="table table-striped table-hover">
  <thead>
    <th></th>
    <th>Submitted</th>
    <th>Name</th>
    <th colspan='3'>Workcamp</th>
    <th>Email</th>
    <th>Birth number</th>
    <th>Payment</th>
  </thead>
  <tbody>
    {{#each itemController='apply_form'}}
      <tr {{action 'go_to_detail' this }}>
        <td>
          <i {{ bind-attr class=":fa starred:fa-star:fa-star-o" }} {{ action 'toggle_starred' bubbles=false}}></i>
        </td>
        <td>{{long-date created_at}}</td>
        <td>
          {{gender volunteer}}
          {{name}}
          ({{volunteer.age}})
        </td>
        <td>{{ apply-form-state-icon state}}</td>
        <td>
          {{#each state.actions}}
            {{ apply-form-action this }}
          {{/each}}
        </td>
        <td>
          {{#link-to 'workcamp' current_workcamp}}{{current_workcamp.name}}{{/link-to}}
        </td>
        <td>{{ mail-to volunteer.email }}</td>
        <td>{{volunteer.birthnumber}}</td>
        <td>{{payment.amount}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>