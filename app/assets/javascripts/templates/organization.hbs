<div class="row">
  <div class="col-lg-8">
    <h2>
      {{#if name}}
        {{name}}
      {{else}}
        <span class='text-muted'>New Organization</span>
      {{/if}}
      <small>{{code}}</small>
    </h2>

      <form class="form" role="form" {{action 'save' on="submit"}}>
        <fieldset>
          <div class='row'>
            <div class="form-group col-lg-4">
              <label class=" control-label">Name</label>
              {{input value=name class="form-control"}}
            </div>

            <div class="form-group col-lg-4">
              <label class=" control-label">Code</label>
              {{input value=code class="form-control"}}
            </div>

            <div class="form-group col-lg-4">
              <label class=" control-label">Contact Person</label>
              {{input value=contact_person class="form-control"}}
            </div>
          </div>

          <div class='row'>
            <div class="form-group col-lg-4 col-lg-4-offset">
              <label class=" control-label">Phone</label>
              {{input value=phone class="form-control"}}
            </div>

            <div class="form-group col-lg-4">
              <label class=" control-label">Mobile</label>
              {{input value=mobile class="form-control"}}
            </div>

            <div class="form-group col-lg-4">
              <label class=" control-label">
                Website
                {{#if website}}
                  {{external-link website}}
                {{/if}}
              </label>
              {{input value=website class="form-control"}}
            </div>
          </div>

          <div class='row'>
            <div class="form-group col-lg-4">
              <label class=" control-label">Country</label>
              {{#model-field errors=errors.country}}
                {{partial 'inputs/country'}}
              {{/model-field}}
            </div>
          </div>
        </fieldset>

        {{#if isNew}}
          <p class='text-muted'>Please save the organization to add its email contacts.</p>
        {{else}}
          {{render 'email_contacts' }}
        {{/if}}

        <button type="submit" class="btn btn-primary">Save</button>
        {{ button 'Cancel' 'rollback' 'btn-default' }}
      </form>
  </div>
  <div class="col-lg-4">
    <h3>
      Workcamps in {{year}}
      <button class='btn btn-success pull-right' {{action 'newWorkcamp'}}>
        {{fa 'plus'}} Create
      </button>
    </h3>
    {{ render 'mini_workcamps'  }}
  </div>
</div>