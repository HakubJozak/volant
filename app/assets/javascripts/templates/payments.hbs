{{partial 'query'}}

<table class="table table-striped table-hover">
  <thead>
    <th>Application</th>
    <th>Received</th>
    <th>Amount</th>
    <th>Account</th>
    <th colspan='3'>Returned</th>
    <th>Description</th>
  </thead>
  <tbody>
    {{#each}}
      <tr {{action 'go_to_detail' this }}>
        <td>
          {{#if apply_form}}
            {{#link-to 'apply_form' apply_form}}
              {{apply_form.name}}
            {{/link-to}}
          {{else}}
            -
          {{/if}}
        </td>
        <td>{{format-date received}}</td>
        <td>{{amount}}</td>
        <td>
          {{#if by_bank }}
            {{account}}/{{bank_code}}
          {{else}}
            Cash
          {{/if}}
        </td>
        <td>{{format-date returned_date}}</td>
        <td>{{returned_amount}}</td>
        <td>{{returned_reason}}</td>
        <td>{{description}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{ render 'pagination' }}
