<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Code</th>
        <th>Name</th>
        <th>Tags</th>
        <th>Age</th>
        <th>From</th>
        <th>To</th>
        <th>Organization</th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
        <tr {{action 'go_to_detail' this}}>
          <td>{{flag country}}</td>
          <td>{{code}}</td>
          <td>{{name}}</td>
          <td>
            {{#each tags}}
              {{ tag this }}
            {{/each}}
          </td>
          <td>{{age-range this }}</td>
          <td>{{format-date begin}}</td>
          <td>{{format-date end}}</td>
          <td>{{organization.name}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
