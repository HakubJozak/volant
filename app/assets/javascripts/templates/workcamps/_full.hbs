<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Code</th>
        <th>Name</th>
        <th>From</th>
        <th>To</th>
        <th>Organization</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
        <tr>
          <td>{{flag country}}</td>
          <td>{{code}}</td>
          <td>{{name}}</td>
          <td>{{format-date begin}}</td>
          <td>{{format-date end}}</td>
          <td>{{organization.name}}</td>
          <td class="actions">
            {{#link-to 'workcamp' this class="btn btn-default"}}
            Detail
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
