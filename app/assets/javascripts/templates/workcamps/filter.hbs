<div class="form-group">
  <label class="col-lg-1 control-label">Between</label>
  <div class="col-lg-2">{{input value=from type="date" class="form-control"}}</div>
  <div class="col-lg-2">{{input value=to type="date" class="form-control"}}</div>

  <label class="col-lg-1 control-label">Duration</label>
  <div class="col-lg-1">{{input value=min_duration type="number" class="form-control" placeholder='Min'}}</div>
  <div class="col-lg-1">{{input value=max_duration type="number" class="form-control" placeholder='Max'}}</div>

  <label class="col-lg-1 control-label">Age</label>
  <div class="col-lg-1">{{input value=min_age type="number" class="form-control"}}</div>
  <div class="col-lg-1">{{input value=max_age type="number" class="form-control"}}</div>
</div>

<div class="form-group">
  <label class="col-lg-1 control-label">Free</label>
  <div class="col-lg-1">{{input value=free type="number" class="form-control" placeholder='Any'}}</div>
  <div class="col-lg-1">{{input value=free_females type="number" class="form-control" placeholder='Females'}}</div>
  <div class="col-lg-1">{{input value=free_males type="number" class="form-control" placeholder='Males'}}</div>
</div>

<div class="form-group">
  <label class="col-lg-1 control-label">Having</label>

  <div class="col-lg-2">
    {{view 'collection-picker'
    targetBinding='workcamp_intentions'
    contentBinding='controllers.workcamp_intentions.arrangedContent'
    optionValuePath="content.id"
    optionLabelPath="content.code"
    class="form-control"
    prompt='Intentions'
    }}
  </div>

  <div class="col-lg-2">
    {{view 'collection-picker'
    targetBinding='tags'
    contentBinding='controllers.tags.arrangedContent'
    optionValuePath="content.id"
    optionLabelPath="content.name"
    class="form-control"
    prompt='Tags'
    }}
  </div>

  <div class="col-lg-2">
    {{view 'collection-picker'
    targetBinding='countries'
    contentBinding='controllers.countries.arrangedContent'
    optionValuePath="content.id"
    optionLabelPath="content.name"
    class="form-control"
    prompt='Countries'
    onChange='filterOrganizationsByCountry'
    }}
  </div>

  <div class="col-lg-2">
    {{view 'collection-picker'
    targetBinding='organizations'
    contentBinding='controllers.organizations.arrangedContent'
    optionValuePath="content.id"
    optionLabelPath="content.label"
    class="form-control"
    prompt='Organization'
    }}
  </div>
</div>
</div>

<div class="form-group">
  <div class="col-lg-offset-1 col-lg-11">
    {{view 'labels-list' contentBinding='workcamp_intentions' }}
    {{view 'labels-list' contentBinding='tags' }}
    {{view 'labels-list' contentBinding='countries' }}
    {{view 'labels-list' contentBinding='organizations' }}
  </div>
</div>
