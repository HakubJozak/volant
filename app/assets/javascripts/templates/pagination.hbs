{{#if pagination_bits }}
<div class='row pagination-container'>
  {{#if just_one_page}}
    <div class="col-lg-offset-10 col-lg-2 info">
      <p><em>Found {{total}} records.</em></p>
    </div>
  {{else}}
  <div class="col-lg-8 col-lg-offset-2 text-center">
    <ul class="pagination">
      <li {{ bind-attr class="previous_page::disabled" }}>
        <a href="#" {{ action "set_page" previous_page}}>&laquo;</a>
      </li>

      {{#each pagination_bits itemController='pagination_bit'}}
      {{#if active}}
        <li class='active'><a href="#">{{content}}</a></li>
      {{else}}
        {{#if link}}
          <li><a href="#" {{ action "set_page" this}}>{{content}}</a></li>
        {{else}}
          <li class='disabled'><span>{{content}}</span></li>
        {{/if}}
      {{/if}}
      {{/each}}

      <li {{ bind-attr class="next_page::disabled" }}>
        <a href="#" {{ action "set_page" next_page}}>&raquo;</a>
      </li>
    </ul>
  </div>
  <div class="col-lg-2 info">
    <p><em>Found {{total}} records.</em></p>
  </div>
{{/if}}
</div>

{{else}}
  <div class="col-lg-12 info text-center">
    <p><em>No records found.</em></p>
  </div>
{{/if}}
