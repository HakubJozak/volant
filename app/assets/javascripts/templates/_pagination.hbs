<ul class="pagination pagination-lg">
  <li><a href="#" {{ action "adjust_page" -1}}>&laquo;</a></li>
  {{#each pagination.relevant_pages}}
    <li><a href="#" {{ action "set_page" this}}>{{this}}</a></li>
  {{/each}}
  <li><a href="#" {{ action "adjust_page" 1}}>&raquo;</a></li>
</ul>


<div class="row">
  <div class="col-lg-2">
    <ul class='pager'>
      <li {{bind-attr class=":previous
        previous_page_exists::disabled"}}>
        <a href="#" {{ action "adjust_page" -1}}>&larr;</a>
      </li>
    </ul>
  </div>
  <div class="col-lg-8">
    <p>
      <em>Found {{pagination.total}} records in
        {{pagination.total_pages}} pages. Displaying page
        {{pagination.current_page}}.</em>
    </p>
  </div>
  <div class="col-lg-2">
    <ul class='pager'>
      <li {{bind-attr class=":next next_page_exists::disabled"}}>
        <a href="#" {{action "adjust_page" 1}}>&rarr;</a>
      </li>
    </ul>
  </div>
</div>
