<div class='row'>
  <div class='col-md-12'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Import {{capitalize mode}} Workcamps</h3>
      </div>

      <div class="panel-body">
        <form id='upload-form' enctype="multipart/form-data" {{ action 'import' on="submit" }} class='form-horizontal'>

        <div class="form-group">
          <label class="col-md-1 control-label">PEF</label>
          <div class="col-md-3">
            {{input type='file' name="pef" class='form-control'}}
            <p class="help-block">Projects will be imported into {{upcase mode}} section.</p>
          </div>
          <div class="col-md-3">
            <button class='btn btn-primary' type='submit'>Import</button>
          </div>

          {{#if arrangedContent}}
            <div class="col-md-5 pull-right">
              <button class='btn btn-danger' type='submit' type='button' {{action 'cancelAll'}}>Cancel All</button>
              <button class='btn btn-success' type='submit' type='button' {{action 'confirmAll'}}>Confirm All</button>              
            </div>          
          {{/if}}
        </div>
        </form>
      </div>

    <table class="table table-hover">
      <thead>
      </thead>
      <tbody>
        {{#each messages}}
          <tr>
            <th>{{capitalize level}}</th>
            <td>{{log-message level text }}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    
    </div>
  </div>
</div>

{{partial 'workcamps/list'}}