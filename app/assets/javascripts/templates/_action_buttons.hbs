{{#if current_message}}
  {{#link-to 'message' current_message class='btn btn-warning'}}
    {{fa 'send'}} Message
  {{/link-to}}
{{else}}
  {{#if state.actions.firstObject }}
    <div class="btn-group">
      <button {{action 'apply_form_action' state.actions.firstObject this bubbles=false}} type="button" class="btn btn-default btn-sm">
        {{capitalize state.actions.firstObject}}
      </button>
      <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        {{#each action_name in state.actions}}
          <li><a {{action 'apply_form_action' action_name this bubbles=false}} href="#">
            {{ apply-form-action-icon action_name }} {{capitalize action_name}}
          </a></li>
        {{/each}}
        <li>
          {{mail-to-title email "<i class='fa fa-envelope-o'></i> Email"}}
        </li>

      </ul>
    </div>
  {{/if}}
{{/if}}