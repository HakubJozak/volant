<h2>Messages</h2>

<table class="table table-striped table-hover">
  <thead>
    <th></th>
    <th>Subject</th>
    <th>Action</th>
    <th>To</th>
    <th>Sent</th>
    <th>Application</th>
    <th>Workcamp</th>
  </thead>
  <tbody>
    {{#each}}
      <tr {{bind-attr class="delivered::warning"}}>
        <td>
          {{#if attachments}}
            {{fa 'paperclip'}}
          {{/if}}
        </td>
        <td>
          {{#link-to 'message' this}}
            {{#if subject}}
              {{subject}}
            {{else}}
              [no subject]
            {{/if}}

          {{/link-to}}
        </td>
        <td>{{action_name}}</td>
        <td>{{to}}</td>
        <td>{{format-date sentAt}}</td>
        <td>
          {{#if apply_form}}
            {{#link-to 'apply_form' apply_form}}
            {{apply_form.name}}
            {{/link-to}}
          {{/if}}
        </td>
        <td>
          {{#if apply_form.current_workcamp}}
            {{#link-to 'workcamp' apply_form.current_workcamp}}
              {{apply_form.current_workcamp.name}}
            {{/link-to}}
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{ render 'pagination' }}