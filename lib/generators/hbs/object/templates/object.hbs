<h3><%= class_name %></h3>

{{errors.messages}}

<form {{ action 'save' on='submit'}}>
  <% attributes.each do |attr| -%>
  <div class="form-group">
    {{#model-field errors=errors.<%= attr.name %>}}
      <label class=" control-label"><%= attr.name.humanize %></label>
      {{input value=<%= attr.name %> class="form-control" }}
    {{/model-field}}
  </div>
  <% end -%>

  <button type="submit" class="btn btn-primary">Save</button>

  {{ button 'Cancel' 'rollback' 'btn' }}

  {{#unless isNew}}
    {{ button 'Delete' 'remove' 'btn btn-danger' }}
  {{/unless}}
</form>