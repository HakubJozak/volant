<div class='col-md-6'>
  <h3>
    <%= plural.humanize %>
    {{#link-to '<%= plural %>.new' class='btn btn-success pull-right'}}{{fa 'plus'}} New{{/link-to}}
  </h3>

<table class="table table-striped table-hover">
  <thead>
    <% attributes.each do |attr| -%>
    <th><%= attr.name.humanize %></th>
    <% end -%>
  </thead>
  <tbody>
    {{#each}}
      <tr>
        <% attributes.each_with_index do |attr,i| -%>
        <% if i == 0 -%>
        <td>
          {{#link-to '<%= singular%>' this}}
            {{<%= attr.name %>}}
          {{/link-to}}
        </td>
        <% else -%>
        <td>{{<%= attr.name %>}}</td>
        <% end -%>
        <% end -%>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
<div class='col-md-6 right-side-edit'>
  {{outlet}}
</div>